<script>
let originalData = [];
let chart;

/* ===== Ä°ÅžLETME GENELÄ° ===== */
async function loadEnterprise() {
  const res = await fetch("/simulasyon-isletme");
  const data = await res.json();
  originalData = data.topics;

  const tbody = document.getElementById("topicTable");
  tbody.innerHTML = "";

  data.topics.forEach(t=>{
    tbody.innerHTML += `
      <tr>
        <td>${t.topic_adi}</td>
        <td>%${t.oran}</td>
        <td><span class="dot ${t.color}"></span></td>
      </tr>`;
  });

  const decision = document.getElementById("decisionText");
  decision.innerHTML = "";

  data.decision.forEach(d=>{
    let cssClass="success";
    
    if(d.includes("ðŸ”´")) {
      cssClass="critical";
    } else if(d.includes("ðŸŸ¡")) {
      cssClass="warning";
    }

    d=d.replace(/[ðŸ”´ðŸŸ¡ðŸŸ¢]/g,"").trim();

    decision.innerHTML += `
      <div class="decision-item ${cssClass}">
        <span class="decision-text">${d}</span>
      </div>`;
  });
}

function runSimulation(){
  const labels=originalData.map(t=>t.topic_adi);
  const before=originalData.map(t=>t.oran);
  const after=originalData.map(t=>t.risk!=="low"?Number((t.oran*0.6).toFixed(1)):t.oran);

  // Grafik kartÄ±nÄ± gÃ¶ster
  document.getElementById("chartCard").style.display = "block";

  if(chart) chart.destroy();

  chart=new Chart(document.getElementById("beforeAfterChart"),{
    type:"bar",
    data:{
      labels,
      datasets:[
        {
          label:"SimÃ¼lasyon Ã–ncesi",
          data:before,
          backgroundColor:"rgba(236,72,153,.7)",
          borderRadius: 6,
          barThickness: 20
        },
        {
          label:"SimÃ¼lasyon SonrasÄ±",
          data:after,
          backgroundColor:"rgba(37,99,235,.8)",
          borderRadius: 6,
          barThickness: 20
        }
      ]
    },
    options:{
      responsive: true,
      maintainAspectRatio: false,
      scales:{
        y:{
          beginAtZero:true,
          grid: {
            color: 'rgba(0, 0, 0, 0.05)'
          }
        },
        x:{
          grid: {
            display: false
          }
        }
      },
      plugins: {
        legend: {
          display: true,
          position: 'top'
        }
      }
    }
  });
}

loadEnterprise();
</script>

